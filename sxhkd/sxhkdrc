#
# bspwm hotkeys
#

# Quit
alt + shift + q
	exitbox

# Close window
alt + {_,shift +} Escape
	bspc node -c

# Toggle monocle
alt + space
	bspc desktop -l next

# Toggle tile
alt + {s,f,t}
    bspc node -t {floating,fullscreen,tiled}

# Lock node
alt + shift + p
    bspc node -t private

# Last desktop/workspace
alt + {grave,Tab}
	bspc {node,desktop} -f last

# Balance tree
alt + b
	bspc desktop -B

# Cut the window at..
alt + shift + {a,s,w,d}
	bspc window -p {left,down,up,right}

# Focus or move window
alt + {_,shift + }{a,s,w,d}
	bspc window -{f,s} {left,down,up,right}

# Focus or move window to desktops
alt + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} ^{1-9,10}

# Resize the window by pushing
alt + shift + {a,s,w,d}
	bspc window -e {left,down,up,right} push

# Resize the window by pulling
alt + ctrl + {a,s,w,d}
	bspc window -e {right,up,down,left} pull

# Focus window next or prev
alt + {_,shift + }c
	bspc window -f {next,prev}

# Move to previous or next desktop/workspace
super + {1,2}
	bspc desktop -f {prev,next}

super + shift + {1,2}
	bspc monitor -f {prev,next}

# Cancel preselection for splitting
super + ctrl + {_,shift + }escape
	bspc {window -p cancel,desktop -c}

# Set splitting ratio of windows
super + ctrl + {1-9}
	bspc window -r 0.{1-9}

# Focus or move window to desktops
alt + {_,shift + }{1-9,0}
	bspc {desktop -f,window -d} {1-9,0}

~button1
	bspc pointer -g focus

# Move or resize window
alt + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

# Print screen
Print
    ~/.bin/screenshot

# wm independent hotkeys
alt + Return
    termite

alt + shift + Return
    termite -e tmux

alt + r
    launcher

# Volume Control via pulseaudio-ctl
XF86AudioRaiseVolume
    pulseaudio-ctl up

XF86AudioLowerVolume
    pulseaudio-ctl down

XF86AudioMute
    pulseaudio-ctl mute

# make sxhkd reload its configuration files:
super + F1
    pkill -USR1 -x sxhkd
